<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('https://res.cloudinary.com/dreamslewagon/image/upload/v1605870178/lhn7ja8brlac2leubnhs.jpg');">
  <div class="container">
    <h1>Cocktails!</h1>
    <p>Change your life and learn how to make cocktails</p>

  </div>
</div>
<div class="over">
  <h1 class="text-center m-2 white-bold">List of cocktails</h1>
  <div class="d-flex flex-wrap justify-content-center">
    <% @cocktails.each do |cocktail| %>

    <div class="card-category m-2" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cocktail.photo.attached? ? cl_image_path(cocktail.photo.key) : image_path('1.jpg') %>)">
      <%= cocktail.name.capitalize %>
      <%= link_to cocktail do %>
     <i class="far fa-eye"></i>
     <% end %>
    </div>
    <% end %>
  </div>
</div>








